<h1><%= @list.name %></h1>

<%= link_to 'Create Bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary'%>

<ul style='list-style-type: none' class='d-flex'>
  <%@list.movies.each do | movie | %>
  <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <div class='card' style="width: 14rem;">
      <%= image_tag(movie.poster_url, class: "card-img-top") %>
      <div>
        <li class="card-body">
          <h3 class="card-title"><%= movie.title %></h3>
          <p>Comment: <%= bookmark.comment %></p>
          <p>Rating: <%= movie.rating %></p>
          <%= link_to 'DELETE', bookmark_path ,data: { turbo_method: :delete } ,class: 'btn btn-warning'%>
        </li>
      </div>
    </div>
  <% end %>
</ul>

<%= link_to 'Back to list', lists_path , class: 'btn btn-secondary'%>
